<% layout("/layouts/boilerplate") %>

<body><br>
    <div class="row offset-2">
        <h3>Edit Your Listing</h3>
    <form method="POST"  novalidate class="needs-validation" action="/listings/<%=Listing._id%>?_method=PUT">
        <div class="mb-3">
            <label for="title" class="form-label">Title</label>
            <input name="Listing[title]" value="<%=Listing.title%>" required type="text" class="form-control">
            <div class="invalid-feedback">Please enter a title</div>
            <br>
        </div>
        <div class="mb-3">
            <label for="description" class="form-label">Description</label>
            
            <textarea name="Listing[description]" required class="form-control"><%=Listing.description%></textarea>
            <div class="invalid-feedback">Please enter a short description</div>
            <br>
        </div>
        <div class="mb-3">
            <label for="image" class="form-label">Image</label>
            
            <input name="Listing[image]" required class="form-control" value="<%=Listing.image%>" type="url">
            <div class="invalid-feedback">Please enter a image link/url </div>
            <br>
        </div>
        <div class="row">

        
        <div class="mb-3 col-md-4">
            <label for="price" class="form-label">Price</label>
            
            <input name="Listing[price]" required class="form-control" value="<%=Listing.price%>" type="number">
            <div class="invalid-feedback">Please enter a price</div>
            <br>
        </div>
        <div class="mb-3 col-md-8">
            <label for="country" class="form-label">Country</label>
            
            <input name="Listing[country]" required class="form-control" value="<%=Listing.country%>" type="text">
            <div class="invalid-feedback">Please enter a country name</div>
            <br>
        </div>
    </div>
        <div class="mb-3">
            <label for="location" class="form-label">Location</label>

            <input name="Listing[location]"  required class="form-control" value="<%=Listing.location%>" type="text">
            <div class="invalid-feedback">Please enter a valid location</div>
            <br>
        </div>
        <button class="btn btn-dark edit-btn">Save</button>
    </form>
    </div>
    <br>
</body>
<script src="/js/script.js"></script>
